@model Person
@{
    ViewData["Title"] = "Details";
}

<h1>Person Details</h1>

<div class="row rowPersonView">
    <div class="col-4">Name</div>
    <div class="col-4">PhoneNumber</div>
    <div class="col-4">City</div>
</div>
<div class="row colPersonView mb-3 text-white">
    <div class="col-4">@Model.Name</div>
    <div class="col-4">@Model.PhoneNumber</div>
    <div class="col-4">@Model.CityName</div>
</div>

<br />

<a class="btn btn" style="background-color:black; color:white;" asp-controller="People" asp-action="Delete" asp-route-id="@Model.PersonId" style="background-color:black">Delete</a>
<a asp-action="Edit" asp-controller="People" asp-route-id="@Model.PersonId" class="btn btn-primary">Edit</a>
<a asp-controller="People" asp-action="Person" class="btn btn-danger">Back</a>