@model Person
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-3">
        <label>Name</label>
        <div>@Model.Name</div>
    </div>
    <div class="col-3">
        <label>Phone</label>
        <div>@Model.PhoneNumber</div>
    </div>
      <div class="col-3">
      <label>City</label>
        <div>@Model.CityName</div>
    </div>

    <div class="col-3">
        <div class="btn btn-danger">@Html.ActionLink("Delete","Delete","People", new {id = Model.PersonId})</div>
        <a asp-action="Person" class="btn btn-warning" asp-controller="People">Back</a>
    </div>

</div>