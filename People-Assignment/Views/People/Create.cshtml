@model CreatePersonViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create a new person</h1>

<div class="col-md-4">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="All"></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input class="form-control" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="CityName"></label>
            <input asp-for="CityName" class="form-control" list="cityList" />
            <span asp-validation-for="CityName" class="text-danger"></span>
            <datalist id="cityList">
                @foreach (string city in Model.CityList)
                {
                    <option value="@city">@city</option>
                }
            </datalist>
        </div>
        <input type="submit" value="Create" class="btn btn-success" />
        <a asp-action="Person" asp-controller="People" class="btn btn-danger">Back</a>
    </form>
</div>